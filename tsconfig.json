{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["ESNext", "DOM"],
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["resources/js/*"],
      "@Modules/*": ["modules/*"]
    },
    "types": ["vite/client"]
  },
  "include": [
    "resources/js",
    "modules",
    "resources/**/*.ts",
    "resources/**/*.vue",
    "modules/**/*.ts",
    "modules/**/*.vue"
  ],
  "exclude": [
    "node_modules",
    "vendor"
  ]
}
